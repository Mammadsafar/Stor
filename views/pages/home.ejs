<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/header.css">
    <link rel="stylesheet" href="css/home.css">
    <link rel="stylesheet" href="css/product.css">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
        integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.js"
        integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc=" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src="https://kit.fontawesome.com/1229ccb1cc.js" crossorigin="anonymous"></script>

    <title>Document</title>
</head>

<body>
    <%- include('../partials/header')-%>

    <div class="container">
        <div class="row justify-content-around">

            <% for (let i = 0; i < product.length ; i++) { %>
            <div class=" mt-3  col-12 col-md-5 ml-md-4 col-lg-3">
                <main role="main">
                    <div class="product">
                        <figure>
                            <img src=<%=product[i].img %> alt="Product Image" class="product-image">
                        </figure>

                        <div class="product-description">

                            <div class="info">
                                <h1><%= product[i].title %></h1>
                                <!-- <p>
                                    <%= product[i].text %>
                                </p> -->
                            </div>

                            <div class="price">
                                <%= product[i].price %>
                            </div>
                        </div>

                        <div class="product-sidebar">
                            <button class="buy">
                                <span>BUY ITEM</span>
                            </button>

                            <button class="info">
                                <a href="/products/product<%= i+1 %>" class="more-info"><span>MORE INFO</span></a>
                            </button>

                            <button class="size">
                                <span>SIZES</span>
                            </button>

                            <button class="colors">
                                <span>
                                    <a href="" class="color black"></a>
                                    <a href="" class="color white"></a>
                                    <a href="" class="color red"></a>
                                </span>
                            </button>
                        </div>
                    </div>
                </main>
            </div>
            <% } %>

        </div>
    </div>


    <script src="js/search.js"></script>
    <script src="js/home.js"></script>
</body>

</html>